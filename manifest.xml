<?xml version="1.0" encoding="UTF-8"?>
<ajxp_plugin id="mailer.phpmailer-smtp" enabled="true" label="PHPMailer-smtp" description="CONF_MESSAGE[A simple mailer]" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="file:../core.ajaxplorer/ajxp_registry.xsd">
    <server_settings>
        <param name="MAILER" type="select" choices="sendmail|sendmail,mail|mail" label="CONF_MESSAGE[Mailer]" description="CONF_MESSAGE[Php mailer to use (see phpmail-smtp documentation).]" mandatory="true" default="sendmail"/>
        <param name="SENDMAIL_PATH" type="string" label="CONF_MESSAGE[Sendmail Path]" description="CONF_MESSAGE[Path to sendmail if not the default one]" mandatory="true" default="/usr/sbin/sendmail"/>
        <param name="MAIL_ENCODING" type="select" choices="quoted-printable,8bit,7bit,binary,base64" label="CONF_MESSAGE[Mails Encoding]" description="CONF_MESSAGE[Content encoding of the email. Default value should be ok for most configurations. Some specific Windows Exchange + Outlook combination may require switching to 7bit.]" default="quoted-printable"/>
		
        <param name="SMTP_USER" group="CONF_MESSAGE[Server]" type="string" label="Le nom utilisateur" description="CONF_MESSAGE[smtp_user]" mandatory="true" default=""/>
        <param name="SMTP_PASS" group="CONF_MESSAGE[Server]" type="string" label="La clé de connexion" description="CONF_MESSAGE[smtp_pass]" mandatory="true" default=""/>
        <param name="SMTP_HOST" group="CONF_MESSAGE[Server]" type="string" label="L'adresse du host" description="CONF_MESSAGE[smtp_host]" mandatory="true" default=""/>
        <param name="SMTP_PORT" group="CONF_MESSAGE[Server]" type="string" label="Le port" description="CONF_MESSAGE[smtp_port]" mandatory="true" default=""/>
		<param name="SMTP_PREFIX" group="CONF_MESSAGE[Server]" type="select" choices=",ssl,tls" label="Préfixe de connexion SMTP" description="CONF_MESSAGE[smtp_prefix]" mandatory="true" default=""/>
    </server_settings>
    <class_definition filename="plugins/mailer.phpmailer-smtp/PhpMailSmtp.php" classname="Pydio\Mailer\Implementation\PhpMailSmtp"/>
    <client_settings>
	<resources>
	    <i18n namespace="mailer.phpmailer-smtp" path="plugins/mailer.phpmailer-smtp/i18n" />
	</resources>
    </client_settings>
</ajxp_plugin>
